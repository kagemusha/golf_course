<p style="color: green"><%= notice %></p>

<% content_for :title, "Amenities" %>

<h1>Amenities</h1>

<div id="amenities">
  <% @amenities.each do |amenity| %>
    <div id="<%= dom_id amenity %>">
      <p><strong>Name:</strong> <%= amenity.name %></p>
      <p><strong>Width:</strong> <%= amenity.width %></p>
      <p><strong>Length:</strong> <%= amenity.length %></p>
      <p><strong>Area:</strong> <%= amenity.area %></p>
      <p><strong>Concurrent:</strong> <%= amenity.concurrent %></p>
      <p><strong>Padding:</strong> <%= amenity.padding %></p>
      <p><strong>Property:</strong> <%= amenity.property %></p>
      <p><strong>Max Buildable:</strong> <%= amenity.max_buildable %></p>
    </div>
    <p>
      <%= link_to "Show this amenity", amenity %>
    </p>
  <% end %>
</div>

<%= link_to "New amenity", new_amenity_path %>
